<RelativeLayout 
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/activity_background">

    <LinearLayout
        android:id="@+id/page_title_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4.0dip"
        android:background="@drawable/bg_title_mapsearch"
        android:gravity="center" >

        <TextView
            android:id="@+id/title_text"
            style="@style/Text.primaryTitle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:textColor="#ff000000" />

    </LinearLayout>
		<!-- android:background="@drawable/bg_edit_ask" -->	
		<TextView android:id="@+id/text_edit" 
			android:layout_below="@id/page_title_top"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:text="@string/str_about_us"
			android:textColor="#666666"
			android:textSize="16sp"
			android:layout_margin="10dip"
			/>

		
</RelativeLayout>
