<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/list_selector_background" >

    <LinearLayout
        android:id="@+id/RelativeLayout_poi_tst_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4.0dip"
        android:background="@drawable/bg_title_mapsearch"
        android:gravity="center" >

        <TextView
            android:id="@+id/ItemPOIRst"
            style="@style/Text.primaryTitle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:textColor="#ff000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/RelativeLayout_poi_tst_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_default_normal_disable"
        android:gravity="center"
        android:visibility="gone" >

        <TextView
            android:id="@+id/ItemPageText"
            style="@style/Text.primaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#ff000000" />

        <ImageView
            android:id="@+id/ItemPageImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_icon_nextpage"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <ListView
        android:id="@+id/ListView_SearchRes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/RelativeLayout_poi_tst_bottom"
        android:layout_below="@id/RelativeLayout_poi_tst_top"
        android:background="@drawable/list_selector_background"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/list_divider"
        android:dividerHeight="1.0dip" />

</RelativeLayout>