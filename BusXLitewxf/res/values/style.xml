<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="HomeNavBarBtn">
		<item name="android:textSize">12.0sp</item>
		<item name="android:background">#00000000</item>
	</style>
	
	<style name="TitleText">
		<item name ="android:textSize">22sp</item>
		<item name ="android:textColor">#ffffffff</item>
	</style>
	
	<style name="AppManagerTab" parent="android:style/Theme.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

	<style name="translucent">  
	    <item name="android:windowBackground">@color/translucent_background</item>  
	    <item name="android:windowIsTranslucent">true</item>  
	    <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>  
    </style>

	<style name="Text" />
	<style name="Text.primaryTitle" parent="@style/Text">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ff000000</item>
    </style>
    <style name="Text.secondaryTitle" parent="@style/Text">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">#ff4d4d4d</item>
    </style>
	<style name="Text.primaryListTitle" parent="@style/Text">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">#ff000000</item>
    </style>
    <style name="Text.reasonList" parent="@style/Text">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff5f5f5f</item>
    </style>
    <style name="Text.secondaryListTitle" parent="@style/Text">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff6d6d6d</item>
    </style>
    <style name="Text.thirdListTitle" parent="@style/Text">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff6d6d6d</item>
    </style>
    <style name="Text.navPrimaryListTitle" parent="@style/Text">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">#ff5f5f5f</item>
    </style>
    <style name="Text.defButton" parent="@style/Text">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

	<style name="ListView" />
	<style name="ListView.defListEx" parent="@style/ListView">
        <item name="android:fadingEdge">none</item>
        <item name="android:divider">@drawable/list_divider</item>
        <item name="android:dividerHeight">2.0px</item>
    </style>
	    <style name="Text.placeChooserText" parent="@style/Text">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@drawable/place_selector_color</item>
    </style>
    <style name="detail_content_left" parent="@android:style/TextAppearance.Small">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#686868</item>
		<item name="android:layout_marginLeft">25px</item>
		<item name="android:layout_marginTop">0px</item>
	</style>
	<style name="detail_content" parent="@android:style/TextAppearance.Small">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#686868</item>
		<item name="android:layout_marginRight">10px</item>
		<item name="android:layout_marginTop">0px</item>
	</style>
	<style name="detail_title" parent="@android:style/TextAppearance.Medium">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#000000</item>
		<item name="android:layout_marginLeft">25px</item>
		<item name="android:layout_marginTop">1px</item>
	</style>
</resources>
